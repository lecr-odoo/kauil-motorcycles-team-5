<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   
    <record id="motorcycle_registry.motorcycle_registry_view_list" model="ir.ui.view">
        <field name="name">motorcycle.registry.view.list</field>
            <field name="model">motorcycle.registry</field>
            <field name="arch" type="xml">
                <tree string="Registry List">
                    <field name="registry_number"/>
                    <field name="vin"/>
                    <field name="brand"/>
                    <field name="make"/>
                    <field name="model"/>
                    <field name="license_plate"/>
                    <field name="owner_id"/>
                    <field name="current_mileage" optional="hide"/>
                    <field name="lot_id"/>
                </tree>
            </field>
    </record>

</odoo>